<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="controller.NewPostController"
        prefHeight="400.0" prefWidth="600.0">
    <VBox prefWidth="600.0" alignment="CENTER">
        <Label text="new post">
            <font>
                <Font name="Arial" size="24" ></Font>
            </font>
        </Label>
        <Label text="content"/>
        <JFXTextArea fx:id="contentText" prefWidth="300.0" prefHeight="200.0"/>
        <JFXButton fx:id="uploadImageBtn" text="add image"
                   onAction="#handleUploadImageAction"/>
        <JFXButton fx:id="submitBtn" text="submit"
                onAction="#handleSubmitAction"/>
    </VBox>
</StackPane>
