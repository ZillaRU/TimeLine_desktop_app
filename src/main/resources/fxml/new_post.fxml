<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.NewPostController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox prefWidth="600.0" alignment="CENTER">
        <Label text="new post">
            <font>
                <Font name="Arial" size="24" ></Font>
            </font>
        </Label>
        <Label text="content"/>
        <TextArea fx:id="contentText" prefWidth="300.0" prefHeight="200.0"/>
        <Button fx:id="uploadImageBtn" text="add image"
                onAction="#handleUploadImageAction"/>
        <Button fx:id="submitBtn" text="submit"
                onAction="#handleSubmitAction"/>
    </VBox>
</AnchorPane>
