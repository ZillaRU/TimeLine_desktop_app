<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.NewPostController"
           prefHeight="400.0" prefWidth="600.0">
    <VBox prefWidth="600.0" alignment="CENTER" spacing="20">
        <Label text="Content" styleClass="usual-label"/>
        <JFXTextArea fx:id="contentText" prefWidth="300.0" prefHeight="200.0"
                     focusColor="#ffee33" unFocusColor="#dccddd"/>
        <JFXButton fx:id="uploadImageBtn" text="Add image"
                   onAction="#handleUploadImageAction"/>
        <JFXButton fx:id="submitBtn" text="Submit"
                   onAction="#handleSubmitAction"/>
    </VBox>
</StackPane>
