<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PostsController">
    <top>
        <HBox>
            <Label prefWidth="200.0" alignment="CENTER_RIGHT" text="Moments :) " wrapText="true"/>
            <Label fx:id="updateCountLabel" />
            <Button fx:id="newPostBtn" onAction="#handleNewPostBtnAction" text="new post"/>
            <Button fx:id="refreshBtn" onAction="#handleRefreshBtnAction" text="refresh"/>
        </HBox>
    </top>
    <center>
        <ListView fx:id="postListView" style="-fx-background-color: #444"/>
    </center>
    <bottom>
        <Button fx:id="loadMoreBtn" onAction="#handleLoadMoreBtnAction" text="load more"/>
    </bottom>

</BorderPane>
