<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="controller.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10" border="white">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Log In Timeline :)" GridPane.columnIndex="0"
           styleClass="head-label"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >

        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>



    <!-- Add Name Label -->
    <Label text="Username  " styleClass="usual-label"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1" >
    </Label>
    <!-- Add Name Text Field -->
    <JFXTextField fx:id="nameField" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Add Password Label -->
    <Label text="Password  " styleClass="usual-label"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2" >
    </Label>
    <!-- Add Password Field -->
    <JFXPasswordField fx:id="passwordField" prefHeight="40"
                      GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Add Submit JFXButton -->
    <JFXButton fx:id="signInButton" text="Sign in"
               prefWidth="100" prefHeight="40"
               GridPane.columnIndex="0" GridPane.rowIndex="4"
               GridPane.columnSpan="2" GridPane.rowSpan="1"
               GridPane.halignment="CENTER"
               onAction="#handleLogInJFXButtonAction">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </JFXButton>

</GridPane>
